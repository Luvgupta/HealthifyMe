<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/parent_icon"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_shape"
        android:layout_width="55dp" android:layout_height="55dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/cloud"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/parent_text"
        android:layout_toRightOf="@+id/parent_icon"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/slotDaySize"
        android:text="Morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/parent_slot_available"
        android:text="0 slot available"
        android:textSize="@dimen/slotDaySizeAvailablity"
        android:textColor="#ff0000"
        android:layout_toLeftOf="@+id/parent_up_down_arrow"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/parent_up_down_arrow"
        android:background="@drawable/down_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/parent_icon"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:background="@color/child_disable_background_color"
        android:layout_height="1px"/>

</RelativeLayout>
